{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "outDir": "./dist",
        "isolatedModules": true,
        "resolveJsonModule": true,
        "lib": ["ESNext", "DOM"],
        "types": ["node"],
        "allowJs": true
    },
    "exclude": ["node_modules", "dist"],
    "include": ["src/**/*.ts", "src/aws-exports.js"]
}
